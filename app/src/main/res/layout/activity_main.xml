<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.unsyiah.elektro.mobile.pservices.MainActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c3c2c2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SELAMAT DATANG"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Gunakan Dengan Bijak dan Benar. Pilih Instansi :"
            android:id="@+id/textView3"
            android:gravity="center"
            android:typeface="normal"
            android:textColor="#000000"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/rumahSakit"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/a"
            android:layout_gravity="fill|left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/kantorPolisi"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/b"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/damkar"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/c"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/pmi"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/d"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/pln"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/e"
            android:layout_gravity="center|fill"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/sar"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/f"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/bpbd"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/g"
            android:layout_gravity="fill"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/ppwh"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/h"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/pemerintah"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/i"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </GridLayout>
</ScrollView>

</LinearLayout>
